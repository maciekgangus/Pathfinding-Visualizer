<div class="container d-flex justify-content-between align-items-center">
    <a class="navbar-brand" href="/">Menu</a>

    <ul class="navbar-nav d-flex flex-row">
        <li class="nav-item px-3">
            <a class="nav-link" href="/">Strona główna</a>
        </li>
        <li class="nav-item px-3">
            <a class="nav-link" href="/about">Opis</a>
        </li>
        <li class="nav-item px-3">
            <a class="nav-link" href="/anim/animation">Animacja</a>
        </li>
    </ul>

    <% if (user) { %>
        <div class="dropdown">
            <button class="btn btn-outline-light dropdown-toggle d-flex align-items-center" type="button" id="userDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                <%= user.username %>
            </button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                <li><a class="dropdown-item" href="/users/profile">Profil</a></li>
                <li><button id="logoutButton" class="dropdown-item">Wyloguj</button></li>
            </ul>
        </div>
    <% } else { %>
        <div>
            <a href="/auth/register" class="btn btn-outline-light me-2">Rejestracja</a>
            <a href="/auth/login" class="btn btn-light">Logowanie</a>
        </div>
    <% } %>
</div>
<script src="/js/navbar.js"></script>