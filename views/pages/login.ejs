<div class="card p-4 bg-dark text-white" style="width: 24rem; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2), 0 6px 20px rgba(0, 0, 0, 0.19);">
    <h2 class="text-center mb-4">Logowanie</h2>
    <form id="loginForm">
        <div class="mb-3">
            <label for="username" class="form-label">Nazwa użytkownika</label>
            <input type="text" id="username" name="username" class="form-control bg-dark text-white border-light" required placeholder="Wprowadź nazwę użytkownika">
        </div>
        <div class="mb-3">
            <label for="password" class="form-label">Hasło</label>
            <input type="password" id="password" name="password" class="form-control bg-dark text-white border-light" required placeholder="Wprowadź hasło">
        </div>
        <div id="errorMessage" class="text-danger text-center invisible" style="font-size: 0.9rem;">
        </div>
        <div class="d-grid col-6 mx-auto mt-3">
            <button type="submit" class="btn btn-outline-light">Zaloguj się</button>
        </div>
    </form>
    <div class="mt-3 text-center">
        <p>Nie masz konta? <a href="/auth/register" class="bg-light text-dark text-decoration-none rounded-3 px-2 py-1 d-inline-block">Zarejestruj się</a></p>
    </div>
</div>
<script src="/js/login.js"></script>
